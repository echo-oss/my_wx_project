/* components/spu-typeOne/index.wxss */
.sleeve {
    font-family: sleeve !important;
    color: #157658 !important;
}

.container {
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    border-top: 2px dashed #f5f5f5;
    border-bottom: 2px dashed #f5f5f5;
}

.tags {
    display: flex;
    margin-top: 10rpx;
}

.l-tag {
    margin-right: 6rpx !important;
}

.left {
    /* flex: 1; */
    width: 350rpx;
    display: flex;
    flex-direction: column;
    margin-left:30rpx ;
}

.subtitle {
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
    margin-right: 10rpx;
}

.price-row {
    display: flex;
    align-items: baseline;
}

.l-price-unit {
    margin-right: 14rpx !important;
}

.discount-price {
    margin-left: 20rpx;
    margin-right: 80rpx;
}

.discount-tag {
    box-sizing: content-box;
    position: relative !important;
    bottom: 4rpx;
    /*width: 50rpx;*/
    border-radius: 20rpx !important;
    /*padding:  5rpx !important;*/
}
.img-container{
    display: flex;
    flex-direction: column;
    margin-left:10rpx;
}
.img{
    width: 220rpx;
    height: 180rpx;
}

.right {
    margin-left: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 120rpx;
    /*height: 120rpx;*/
    /*border-left: 2px dashed #f5f5f5;*/
}
 .tag-container{
    display: flex;
    flex-direction: column;
    width: 100%;
}

.tag{
    width: 100%;
    font-size: 24rpx;
    color: #666;
    vertical-align: middle;
    position: relative;
    display: inline-flex;
    align-items: stretch;
    justify-content: center;
    box-sizing: border-box;
    padding:  10rpx;
    line-height: 1;
    background: #fff;
    font-family: Helvetica Neue, Helvetica, sans-serif;
    border: 1rpx solid #b3b1b1;
}
.right .tag-container .top{
    background-color: #b3b1b1;
    color: white;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
}
.right .tag-container  .topRed{
    border: 1rpx solid red !important;
    background-color: red;
}
.right .tag-container .bottom{
    color: #b3b1b1;
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px;
}
.right .tag-container  .bottomRed{
    border: 1rpx solid red !important;
    color: red;
}



.right text{
    color: red;
    font-size: 24rpx;
    margin-top: 10rpx;
}
.price-text{
    color:"#999";
    font-size: 24rpx;
}
.title{
    font-size: 32rpx;
    font-weight: 700;
}