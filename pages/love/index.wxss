.section{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 36rpx;
}
.section__title{

}
.picker{
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.801);
}
.bg{
  background-color: red;
  display: flex;
  flex-direction: row;
}
.co{
  width: 300rpx;
  color:blueviolet;
  border:thin solid ;
  transition: all 1s ease-in-out 0s;
  transform:translate(100rpx) rotateX(360deg) scaleX(1);

}
.co::after{
  display: block;
  content: "";
  background-color:red;
  transition: all 1s ease-in-out 0s;
  width: 0px;
  border-bottom:1rpx solid rgb(54, 54, 49);
}
.co.long::after {
  display: block;
  width: 100px;
  border-bottom:10rpx solid yellow;
  
  background-color: blue;
}
.co.long{
  width: 300px;
  color: blue;
  transform:translate(0) rotateX(0) scale(0,0);
}
.main-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.top-container{
  display: flex;
  flex-direction: row;
}
.div{
  flex: 1;
  height: 150rpx;
  margin: 10rpx;
  display: grid;
  place-items: center;
  background-color: blue;
  transition: all 1s ease-in 0s;
  transform: rotate(0) translate(0);
}
.buttom-container{
  margin: 2rpx 10rpx;
  background-color: #F4516C;
  height: 150rpx;
  display: grid;
  place-items: center;
  transition: all 1s ease-in-out 0s;
  transform: translate(0);
}
.div.rotate1{
  transform:  translate(-100rpx,-100rpx);
}
.div.rotate2{
  transform: translate(100rpx,-100rpx);
}
.div.rotate3{
  transform:  translate(-100rpx,100rpx);
}
.div.rotate4{
  transform: translate(100rpx,100rpx);
}
.buttom-container.rotate3{
  transform: translateY(100rpx);
  z-index:666;
}
.center{
   position: absolute;
   top:50%;
   left: 50%;
   display: grid;
   place-items: center;
   margin-top: -75rpx;
   margin-left:-176rpx ;
   width: 352rpx;
   height: 150rpx;
   font-size: 38rpx;
   background-color: red;
   opacity: 0;
   transition:all 1s ease-in-out 0.1s ;
   transform: rotate(360deg) scale(0);
}
.center.centerto{
  opacity: 1;
  transform: rotate(0) scale(1);
}
