
.swiper {
  width: 100%;
  height: 432rpx;
}
.container{
  background-color: white;
  position: relative;
}
.t-container{
  margin: 30rpx;
  display: flex;
  flex-direction: column;
}
.t-container .title{
  font-size: 50rpx;
  font-weight: 700;
}
 .price-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-top: 10rpx;
  padding:0;
}
.price-container .price{
  font-size:50rpx;
  font-weight: 700;
  margin: 0;
  padding:0;
}
.price-container .sub-price{
  font-weight: 700;
}
.top-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: space-between;
}
.left{
  font-size: 40rpx;
  font-weight: 700;
}
.right{
  color: rgb(167, 165, 165);
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.top{
  margin: 0 30rpx 0rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: space-between;
}
.l-tag{
  margin-right:6rpx ;
}
.down-container{
  display: flex;
  flex-direction: column;
}
.tags {
  display: flex;
  margin-top: 10rpx;
}
.tip{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
}
.tapbar {
  background-color: white;
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx!important;
  justify-content: flex-end;
}

.pos{
  font-size: 60rpx;
  color: white;
  position: absolute;
  top:30rpx;
  right:60rpx;
}
.button{
  display: flex!important;
  flex-direction: column!important;
  font-size: 25rpx!important;
  justify-content: center!important;
  align-items: center!important;
  overflow:auto!important;
}
.img{
  width: 45rpx;
  height: 45rpx;
}