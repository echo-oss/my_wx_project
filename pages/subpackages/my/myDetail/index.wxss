.posting-container .comment-container {
    width: 690rpx;
    padding: 40rpx 30rpx 0 30rpx;
}
.post {
    width: 690rpx;
    margin: 30rpx auto;
    height: 56rpx;
    background-color: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
}

.count{
  background-color: white;
  border-bottom: 1rpx solid black;
}
.tite{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 20rpx 0;
}

.cout1{
  width: 50%;
  padding: 10rpx 30rpx;
  font-size: 14;
}
.tite::after{
    flex: auto;
    content: "";
}

.noneMess{
  height: 100rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}