<view class="container">
  <view class="bg-gradual-red3 bg-size  shadow-warp" >
  </view>
  <button open-type="getUserInfo" bind:getuserinfo="OngetUserInfo" plain="{{true}}" class="style">
    <image class="image postion style" src="images/my.png" />
  </button>
   <view wx:if="{{authorized}}" class="avatar-container postion">
    <image  class="avatar" src="{{userInfo.avatarUrl}}"/>
    <text class="text-xxl text-white panding">{{userInfo.nickName}}</text>
    </view>
    <view class="button-positon button-container">
    <button class="cu-btn round lines-white shadow button-style ">公司简介</button>
    <button class="cu-btn round lines-white shadow button-style">关于我们</button>
 </view>
</view>
  <view class="cu-list menu card-menu  margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="CopyLink" data-link="https://github.com/explore">
        <text class="cuIcon-github text-grey"></text>
        <text class="text-grey">GitHub</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/about/about" hover-class="none">
        <text class="cuIcon-card text-red"></text>
        <text class="text-grey">热门活动</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/log/log" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">热门产品</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-appreciatefill text-red"></text>
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <text class="cuIcon-writefill text-cyan"></text>
        <text class="text-grey">意见反馈</text>
      </button>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/test/list" hover-class="none">
        <text class="cuIcon-creativefill text-orange"></text>
        <text class="text-grey">Bug测试</text>
      </navigator>
    </view>
  </view>