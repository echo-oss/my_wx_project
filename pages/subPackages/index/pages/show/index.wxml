<content-title name="{{name}}">
	<view class="explain">{{tip}}</view>
	<block wx:for="{{list}}">
		<content-card name="{{item.name}}" cardPadding="{{false}}">
			<view class="discription">{{item.discription}}</view>
			<view class="center">
				<image src="{{item.src}}" class="img" data-src="{{item.src}}" mode="aspectFit" bindtap="onShow"></image>
			</view>
		</content-card>
	</block>
</content-title>
<view class="button-container">
	<l-button plain="{{true}}" size="medium" bindtap="onBack">{{style}}</l-button>
</view>